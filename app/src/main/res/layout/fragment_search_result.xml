<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.pencari.search.SearchResultFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_top"
        android:layout_width="409dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/back" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_field"
            android:layout_width="300dp"
            android:layout_height="46dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="23dp"
            android:background="#EBE9EC" />

        <ImageView
            android:id="@+id/btn_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="87dp"
            android:src="@drawable/svg_chip_filter" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_jumlahKostDItemukan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins"
        android:text="TextView"
        android:textColor="#454848"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_top" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/poppins"
        android:text="kost ditemukan"
        android:textColor="#454848"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/tv_jumlahKostDItemukan"
        app:layout_constraintTop_toTopOf="@+id/tv_jumlahKostDItemukan" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="356dp"
        android:layout_height="527dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_jumlahKostDItemukan" />

</androidx.constraintlayout.widget.ConstraintLayout>