<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KostHub" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#23372B</item>
        <item name="colorPrimaryVariant">#335346</item>
        <item name="colorOnPrimary">#437167</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#538F8D</item>
        <item name="colorSecondaryVariant">#65B0B6</item>
        <item name="colorOnSecondary">#7BD1E2</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#FFFFFF</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">#FAFAFB</item>
    </style>

    <style name="subtitle1">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">#171717</item>
    </style>

    <style name="body2">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">#171717</item>
    </style>

    <style name="body2_bold">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">#171717</item>
    </style>

    <style name="body4">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">#171717</item>
    </style>

    <style name="body3">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">#454848</item>
    </style>

    <style name="headline5">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">#171717</item>
    </style>

    <style name="button">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#FAFAFB</item>
    </style>

    <style name="location">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">#454848</item>
    </style>

    <style name="KHOutlinedEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
        <item name="backgroundColor">?attr/background</item>
        <item name="strokeColor">#454848</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
</resources>